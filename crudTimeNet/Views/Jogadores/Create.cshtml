@model crudTimeNet.Models.Jogador

@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
<h1>Adicionar Jogador</h1>

<h4>Informe os dados do Jogador</h4>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <br>
                <input asp-for="Nome" class="form-control" placeholder="Informe o nome do jogador!"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br>
                <input asp-for="Posicao" class="form-control" placeholder="Informe a posição do jogador!" />
                <span asp-validation-for="Posicao" class="text-danger"></span>
            </div>
            <br>
            <br>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<br>
<br>

<div>
    <a asp-action="Index">Visualizar a Lista de Jogadores </a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
