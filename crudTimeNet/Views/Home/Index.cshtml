@model IEnumerable<crudTimeNet.Models.Jogador>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="">
            <form action="Adicionar">
                <div validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp="Nome" class="control-label"></label>
                    <input asp="Nome" class="form-control" placeholder="Nome do Jogador">
                    <span asp-validation="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp="Posicao" class="form-control"></label>
                    <input asp="Posicao" class="form-control" placeholder="Posição do Jogador">
                    <span asp-validation="Posicao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br>
                    <input type="submit" value="Adicionar" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>
